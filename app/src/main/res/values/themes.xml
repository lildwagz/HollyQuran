<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HollyQuran" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary58">@color/green50</item>
        <item name="colorPrimary">@color/green500</item>
        <item name="colorPrimaryDark">@color/green700</item>
        <item name="colorAccent">@color/teal_200</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

    <style name="Theme.HollyQuran.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HollyQuran.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HollyQuran.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>