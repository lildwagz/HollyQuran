<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_surah_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic__number"
                app:tint="?colorPrimary" />

            <TextView
                android:id="@+id/text_surah_number"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                android:text="1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/material_on_primary_emphasis_high_type" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_surah_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/material_on_surface_emphasis_high_type"
                android:textStyle="bold"
                android:text="Surat Al-Fatihah (Pembukaan)"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_number_of_ayah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:text="Makkiyah - 7 Ayat"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_surah_name_arabic"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:padding="6dp"
            android:text="Al-Fatihah"
            android:textSize="16sp"
            android:fontFamily="@font/hafs"
            android:maxLength="25"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_juz_or_page_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary58"
        android:padding="4dp"
        android:gravity="center"
        android:text=" • Juz 1 • Hal 1 •"
        android:textColor="?colorPrimary"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    <TextView
        android:id="@+id/text_bismillah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِيم "
        android:textColor="@color/black"
        android:fontFamily="@font/hafs"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="34sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/text_ayah_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="256"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/material_on_surface_emphasis_high_type" />

        <ImageView
            android:id="@+id/lastRead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_menu_book_24"
            android:padding="6dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp"
            app:tint="?colorPrimary" />
        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_star_24"
            android:padding="6dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp"
            app:tint="?colorPrimary" />

        <ImageView
            android:id="@+id/image_copy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_content_copy"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="?colorPrimary" />

        <ImageView
            android:id="@+id/image_playaudio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_play_circle_filled"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="?colorPrimary"
            />

        <ImageView
            android:id="@+id/image_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_share"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="?colorPrimary" />

        <ImageView
            android:id="@+id/menu_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_more_horiz"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="?colorPrimary" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_ayah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hafs"
        android:paddingHorizontal="16dp"
        android:text=" وَإِذَا قِيلَ لَهُمْ آمِنُوا كَمَا آمَنَ النَّاسُ قَالُوا أَنُؤْمِنُ كَمَا آمَنَ السُّفَهَاءُ ۗ أَلَا إِنَّهُمْ هُمُ السُّفَهَاءُ وَلَٰكِنْ لَا يَعْلَمُونَ"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/material_on_surface_emphasis_high_type"
        android:textSize="28sp" />


    <TextView
        android:id="@+id/text_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dan ketika dikatakan kepada mereka, Percayalah sebagaimana orang-orang telah beriman, mereka berkata, Apakah kami akan beriman seperti orang-orang bodoh telah beriman? Kecuali bahwa mereka adalah orang-orang bodoh di antara mereka."
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:visibility="visible"
        android:paddingBottom="16dp"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>


</LinearLayout>