<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.rating.RatingFragment">


    <ImageView

        android:id="@+id/iv_ranting"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_ranting"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="6dp"
        android:src="@drawable/ic_baseline_close"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_rate_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_ranting"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="Excelent!"
        />

    <RatingBar
        android:id="@+id/rate_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rate_desc"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:rating="5"
        />


    <TextView
        android:id="@+id/tv_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate_star"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Thanks for your feedback!"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_desc_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_thanks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Spread the word by rating us on store!"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textSize="12sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc_thanks"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="Rate Us"
        android:layout_marginTop="8dp"
        android:textAllCaps="false" />
</RelativeLayout>